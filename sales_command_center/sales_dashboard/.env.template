# Sales Command Center Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application Settings
DEBUG=True
LOG_LEVEL=INFO
PORT=8000
HOST=0.0.0.0
ENVIRONMENT=development

# LLM Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
MODEL_NAME=gpt-4-turbo-preview
LLM_PROVIDER=openai
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/sales_command_center
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Cache Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_DASHBOARD=30
CACHE_TTL_ORDERS=300
CACHE_TTL_PIPELINE=300

# Salesforce Integration
SALESFORCE_CLIENT_ID=your_salesforce_client_id
SALESFORCE_CLIENT_SECRET=your_salesforce_client_secret
SALESFORCE_USERNAME=your_salesforce_username
SALESFORCE_PASSWORD=your_salesforce_password
SALESFORCE_SECURITY_TOKEN=your_salesforce_security_token
SALESFORCE_DOMAIN=login
SALESFORCE_API_VERSION=v58.0

# Netsuite Integration
NETSUITE_ACCOUNT_ID=your_netsuite_account_id
NETSUITE_CONSUMER_KEY=your_netsuite_consumer_key
NETSUITE_CONSUMER_SECRET=your_netsuite_consumer_secret
NETSUITE_TOKEN_ID=your_netsuite_token_id
NETSUITE_TOKEN_SECRET=your_netsuite_token_secret
NETSUITE_API_URL=https://your_account.suitetalk.api.netsuite.com

# Email Service Configuration
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM_ADDRESS=noreply@salescommandcenter.com
EMAIL_FROM_NAME=Sales Command Center

# Authentication & Security
SECRET_KEY=your-secret-key-change-in-production-use-strong-random-string
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production-use-strong-random-string
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# OAuth Configuration (e.g., Okta)
OAUTH_PROVIDER=okta
OAUTH_CLIENT_ID=your_oauth_client_id
OAUTH_CLIENT_SECRET=your_oauth_client_secret
OAUTH_REDIRECT_URI=http://localhost:8000/auth/callback
OAUTH_ISSUER=https://your-org.okta.com/oauth2/default

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=True

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# WebSocket Configuration
WEBSOCKET_PING_INTERVAL=25
WEBSOCKET_PING_TIMEOUT=20

# Task Queue Configuration (Celery)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=sales-command-center-documents
AWS_S3_REGION=us-east-1

# Monitoring & Logging
SENTRY_DSN=your_sentry_dsn_optional
DATADOG_API_KEY=your_datadog_api_key_optional
LOG_TO_FILE=False
LOG_FILE_PATH=logs/app.log

# Agent Configuration
AGENT_TIMEOUT=30
MAX_CONVERSATION_HISTORY=10

# Data Sync Configuration
SYNC_INTERVAL_SALESFORCE=300
SYNC_INTERVAL_NETSUITE=900
ENABLE_WEBHOOKS=True

# Feature Flags
ENABLE_VOICE_COMMANDS=True
ENABLE_TRANSACTION_CREATION=True
ENABLE_AI_INSIGHTS=True
ENABLE_EMAIL_GENERATION=True

# Business Rules
MAX_ORDER_VALUE_WITHOUT_APPROVAL=100000
MAX_DISCOUNT_PERCENTAGE=15.0
STALE_DEAL_DAYS=30
